// 1. CONFIGURACIN DEL GENERADOR Y DATASOURCE
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. ENUMS (DEFINICIONES ESTTICAS DEL NEGOCIO)
enum ExerciseDifficulty {
  BASIC
  INTERMEDIATE
  ADVANCED
}

enum PlayerPosition {
  GK    // Arquero
  DEF   // Defensa
  MID   // Volante
  FW    // Delantero
}

enum Role {
  SUPERADMIN
  DIRECTOR
  COACH
  GUARDIAN
}

enum SchoolMode {
  COMMERCIAL
  INSTITUTIONAL
}
enum SessionStatus {
  SCHEDULED // Programado
  COMPLETED // Finalizado
  CANCELLED // Cancelado
}

enum PlanType {
  SEMILLERO
  PROFESIONAL
  ALTO_RENDIMIENTO
  GOLD_NETWORK
}

enum CategoryType {
  FORMATIVA
  SELECTIVA
}

enum AttendanceStatus {
  PRESENT  
  ABSENT  
  LATE
    EXCUSED 
     PENDING
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
  WAIVED
}

// --- NUEVOS ENUMS ---
enum ReferralStatus {
  PENDING
  CONVERTED
  REJECTED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model SchoolStaff {
  id        String @id @default(uuid())

  userId   String
  user     User   @relation(fields: [userId], references: [id])

  schoolId String
  school   School @relation(fields: [schoolId], references: [id])

  role     Role

  createdAt DateTime @default(now())

  @@unique([userId, schoolId])
}

// 3. MODELOS PRINCIPALES

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String
  phone     String?
  role      Role     @default(GUARDIAN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  schoolId  String?
  school    School?  @relation(fields: [schoolId], references: [id])

  strategys     Strategy[]    // Estrategias creadas por el entrenador
  schools        SchoolStaff[] //  relaci贸n m煤ltiple
  managedPlayers Player[]       @relation("GuardianPlayers")
  coachProfile   Coach?
  notifications  Notification[]

  // --- NUEVAS RELACIONES ---
  assignedTasks Task[] @relation("UserTasks") // Tareas asignadas al usuario (Staff)
}

model School {
  id                 String     @id @default(uuid())
  name               String
  slug               String     @unique
  logoUrl            String?
  mode               SchoolMode @default(COMMERCIAL)
  bankDetails        String?    @db.Text
  planType           PlanType   @default(SEMILLERO)
  subscriptionStatus String
  nextBillingDate    DateTime?
  
  users     User[]
  categories Category[]
  players    Player[]
  products   Product[]
  exercises  Exercise[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  staff SchoolStaff[] //  directores, coaches, etc.

  monthlyFees MonthlyFee[]
  
  // --- NUEVAS RELACIONES ---
  // Growth Hacking: Sistema de Referidos
  referralsSent     Referral[]    @relation("SchoolReferrer")
  referralsReceived Referral[]    @relation("SchoolReferee")
  
  // Monetizaci贸n: Espacios de Patrocinio
  sponsorships      Sponsorship[]
  
  // Modo Institucional: Beneficios
  benefits          Benefit[]
  
  // Gesti贸n Interna
  tasks             Task[]

  notices Notice[]
}

model Notice {
  id        String   @id @default(uuid())
  title     String
  summary   String
  content   String   @db.Text
  image     String?
  status    String   @default("draft") // "draft" | "published"
  views     Int      @default(0)
  
  schoolId  String
  school    School   @relation(fields: [schoolId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model Category {
  id       String       @id @default(uuid())
  name     String
  type     CategoryType @default(FORMATIVA)
  schoolId String
  school   School       @relation(fields: [schoolId], references: [id])

  players  Player[]
  coaches  Coach[]           @relation("CoachCategories")
  sessions TrainingSession[]
  matches  Match[]    
  tacticalsBoards TacticalBoard[]       // Relaci贸n con Partidos
}

model SessionTacticalBoard {
  id                String          @id @default(uuid())
  
  // Relaci贸n con la Sesi贸n
  sessionId         String
  trainingSession   TrainingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  // Relaci贸n con la Pizarra
  boardId           String
  tacticalBoard     TacticalBoard   @relation(fields: [boardId], references: [id], onDelete: Cascade)

  // Metadatos de la relaci贸n
  orderIndex        Int             @default(0) // Importante para el ordenamiento en el frontend
  notes             String?         // Notas opcionales para este momento espec铆fico

  createdAt         DateTime        @default(now())
  
  @@index([sessionId])
  @@index([boardId])
}


// Modelo Principal de la Pizarra
model TacticalBoard {
  id          String   @id @default(uuid())
  title       String
  description String?  @db.Text
  
  // Relaci贸n con Categor铆a
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

 coachId     String
  coach       Coach    @relation(fields: [coachId], references: [id])
  
  // Estado INICIAL de la pizarra (tokens y dibujos al empezar)
  initialState Json    // Guardaremos { tokens: [], strokes: [] }

  // Animaci贸n (Array de frames)
  animation    Json?   // Guardaremos [ { tokens: [], strokes: [] }, ... ]
  
  // Metadatos
  tags        String[] // Ej: "Salida", "Corner", "Presi贸n Alta"
  
  authorId    String   // Qui茅n la cre贸
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  sessions    SessionTacticalBoard[] // Para saber en qu茅 sesiones se us贸 esta pizarra
}

model Player {
  id          String   @id @default(uuid())
  firstName   String
  lastName    String
  birthDate   DateTime
  photoUrl    String?
  medicalInfo String?  @db.Text
  active      Boolean  @default(true)
  scholarship Boolean  @default(false)
position    PlayerPosition @default(DEF) // <--- Agregar este campo
  qrCodeToken String @unique @default(uuid())

  schoolId   String
  school     School   @relation(fields: [schoolId], references: [id])
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  guardianId String
  guardian   User     @relation("GuardianPlayers", fields: [guardianId], references: [id])

  attendance      Attendance[]
  evaluations     Evaluation[]
  monthlyPayments MonthlyFee[]
  matchStats      MatchStat[]    // Relaci贸n con Estad铆sticas de Partidos

  createdAt DateTime @default(now())
}

model Coach {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])
  bio    String?

  categories Category[] @relation("CoachCategories")

  // --- NUEVAS RELACIONES ---
  tacticalBoards TacticalBoard[] // Pizarras creadas por el entrenador
}

// 4. MDULO DE ENTRENAMIENTO Y CONTENIDOS

model Exercise {
  id          String   @id @default(uuid())
  title       String
  description String   @db.Text
  
  // === NUEVOS CAMPOS ===
  objective   String?             // Ej: "Mejorar control orientado"
  difficulty  ExerciseDifficulty  @default(BASIC) // BASIC, INTERMEDIATE, ADVANCED
  
  // Multimedia
  videoUrl    String?
  imageUrl    String?

  // === VISIBILIDAD Y PERMISOS ===
  isGlobal    Boolean  @default(false) // Si es TRUE, es un ejercicio del sistema (La Novena) para todos.

  // Relaci贸n con Escuela (Opcional si es global)
  schoolId    String?
  school      School?  @relation(fields: [schoolId], references: [id])

  // Auditor铆a: Qui茅n lo cre贸 (Director o Entrenador)
  authorId    String?  
  // Si tienes un modelo User, podr铆as descomentar esto:
  // author    User?    @relation(fields: [authorId], references: [id])

  // Etiquetas (ej: ["F铆sico", "T谩ctico", "Sub-12"])
  tags        String[]

  // Relaci贸n con las sesiones de entrenamiento
  sessionItems SessionExercise[]

  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TrainingSession {
  id         String   @id @default(uuid())
  title     String?
  location  String?
  status  SessionStatus? @default(SCHEDULED)
  date       DateTime
  notes      String?
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  exercises  SessionExercise[]
  attendance Attendance[]
tacticalBoards SessionTacticalBoard[] // Relaci贸n con las pizarras
  // --- NUEVAS RELACIONES ---
 
  createdAt DateTime @default(now())
  updatedAt DateTime? @updatedAt 
}

model SessionExercise {
  id          String          @id @default(uuid())
  sessionId   String
  session     TrainingSession @relation(fields: [sessionId], references: [id])
  exerciseId  String
  exercise    Exercise        @relation(fields: [exerciseId], references: [id])
  orderIndex  Int
  durationMin Int?
}

model Attendance {
  id        String           @id @default(uuid())
  status    AttendanceStatus
  notes     String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
rating Int?
feedback String?
  // Relaciones
  player    Player          @relation(fields: [playerId], references: [id])
  playerId  String
  
  session   TrainingSession @relation(fields: [sessionId], references: [id])
  sessionId String

  // 锔 CLAVE: Esto permite buscar r谩pido y evitar duplicados
  @@unique([sessionId, playerId])
}

// --- MDULO DE PARTIDOS (MATCHES) ---

model Match {
  id        String   @id @default(uuid())
  rivalName String
  date      DateTime
  isHome    Boolean  @default(true)
  location  String?
    notes String?
  // Relaci贸n con categor铆a
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  // Relaci贸n con estad铆sticas
  stats      MatchStat[]
}

model MatchStat {
  id        String @id @default(uuid())
  goals     Int    @default(0)
  assists   Int    @default(0)
  
  matchId   String
  match     Match  @relation(fields: [matchId], references: [id])
  
  playerId  String
  player    Player @relation(fields: [playerId], references: [id])
}

// --- FIN MDULO PARTIDOS ---

model Evaluation {
  id    String   @id @default(uuid())
  date  DateTime
  type  String // Se mantiene por compatibilidad, pero se recomienda usar testProtocol
  value Float
  unit  String

  playerId String
  player   Player @relation(fields: [playerId], references: [id])

  // --- NUEVAS RELACIONES ---
  testProtocolId String?       
  testProtocol   TestProtocol? @relation(fields: [testProtocolId], references: [id]) // Vinculaci贸n a baremos oficiales
}

model Strategy {
  id          String   @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relaci贸n con el creador (Entrenador)
  coachId     String
  coach       User     @relation(fields: [coachId], references: [id])

  // DATOS DE LA PIZARRA
  // Guardamos las posiciones de las fichas como un JSON
  tokens      Json     
  
  // Guardamos las l铆neas dibujadas. 
  // Opci贸n A: Base64 String (F谩cil, pero ocupa espacio en DB).
  // Opci贸n B: Array de coordenadas (M谩s optimizado, m谩s dif铆cil de programar).
  // Usaremos Opci贸n A por simplicidad ahora:
  drawingData String?  @db.Text 
}

// 5. MDULO COMERCIAL

model MonthlyFee {
  id      String        @id @default(uuid())
  month   Int
  year    Int
  amount  Float
  status  PaymentStatus @default(PENDING)
  dueDate DateTime
  paidAt  DateTime?
  playerId String
  player   Player @relation(fields: [playerId], references: [id])
  paymentDate  DateTime? 
  
  // --- NUEVA RELACIN DIRECTA (OPTIMIZACIN) ---
  schoolId String 
  school   School @relation(fields: [schoolId], references: [id])
  paymentMethod String?

  receiptUrl String?
}

model Product {
  id       String  @id @default(uuid())
  name     String
  price    Float
  stock    Int
  imageUrl String?
  schoolId String
  school   School  @relation(fields: [schoolId], references: [id])
  active   Boolean @default(true)
}

// 6. SISTEMA

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  isRead    Boolean  @default(false)
  type      String
  createdAt DateTime @default(now())
}

// ==========================================
// 7. NUEVOS MDULOS (ALINEACIN FUNCIONAL)
// ==========================================

// --- A. GROWTH HACKING (REFERIDOS) ---
model Referral {
  id        String         @id @default(uuid())
  
  referrerSchoolId String
  referrerSchool   School @relation("SchoolReferrer", fields: [referrerSchoolId], references: [id])
  
  referredSchoolEmail String // Email invitado antes de que se cree la escuela
  referredSchoolId    String? // Se llena cuando la escuela se crea
  referredSchool      School? @relation("SchoolReferee", fields: [referredSchoolId], references: [id])

  status        ReferralStatus @default(PENDING)
  rewardClaimed Boolean        @default(false) // Si ya se aplic贸 el mes gratis
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// --- B. MONETIZACIN LOCAL (PUBLICIDAD) ---
model Sponsorship {
  id          String   @id @default(uuid())
  name        String   // Ej: "Dentista San Jos茅"
  imageUrl    String   // Banner publicitario
  redirectUrl String?  // Link al sitio del sponsor
  location    String   // Ej: "APP_BOTTOM_BANNER", "LOADING_SCREEN"
  
  isActive    Boolean  @default(true)
  startDate   DateTime
  endDate     DateTime
  
  schoolId    String
  school      School   @relation(fields: [schoolId], references: [id])
}

// --- C. MODO INSTITUCIONAL (BENEFICIOS) ---
model Benefit {
  id          String   @id @default(uuid())
  title       String   // Ej: "Gratuidad por Asistencia"
  description String   @db.Text // Ej: "Mantener 80% de asistencia mensual"
  active      Boolean  @default(true)
  
  schoolId    String
  school      School   @relation(fields: [schoolId], references: [id])
}

// --- D. METODOLOGA AVANZADA (TESTS & TCTICA) ---
model TestProtocol {
  id          String   @id @default(uuid())
  name        String   // Ej: "Yo-Yo Test Intermitente", "Salto Vertical CMJ"
  description String   @db.Text // Protocolo de ejecuci贸n
  unit        String   // "cm", "segundos", "nivel"
  
  isGlobal    Boolean  @default(true) // Si es true, lo ven todas las escuelas (creado por SuperAdmin)
  
  baremoJson  String?  @db.Text // JSON con tablas de referencia (Edad vs Resultado)
  
  evaluations Evaluation[]
}



// --- E. GESTIN & OPERACIONES (KANBAN) ---
model Task {
  id          String       @id @default(uuid())
  title       String
  description String?      @db.Text
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  position    Int          // <-- Nuevo campo a帽adido
  dueDate     DateTime?
  
  schoolId    String
  school      School       @relation(fields: [schoolId], references: [id])
  
  assignedToUserId String?
  assignedToUser   User?   @relation("UserTasks", fields: [assignedToUserId], references: [id])
  
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

// --- F. CONFIGURACIN DE PLANES (LIMITES) ---
model PlanLimit {
  id            String   @id @default(uuid())
  planType      PlanType @unique // 1 registro por tipo de plan
  
  maxStudents   Int      // Ej: 80 para SEMILLERO
  maxCategories Int      // Ej: 6
  maxCoaches    Int      // Ej: 3
  
  allowsStore       Boolean @default(false)
  allowsGlobalLib   Boolean @default(false)
  allowsFinance     Boolean @default(false)
}