// 1. CONFIGURACI√ìN DEL GENERADOR Y DATASOURCE
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. ENUMS (DEFINICIONES EST√ÅTICAS DEL NEGOCIO)
enum ExerciseDifficulty {
  BASIC
  INTERMEDIATE
  ADVANCED
}

enum PlayerPosition {
  GK // Arquero
  DEF // Defensa
  MID // Volante
  FW // Delantero
}

enum Role {
  SUPERADMIN
  DIRECTOR
  COACH
  GUARDIAN
}

enum SchoolMode {
  COMMERCIAL
  INSTITUTIONAL
}

enum SessionStatus {
  SCHEDULED // Programado
  COMPLETED // Finalizado
  CANCELLED // Cancelado
}

enum PlanType {
  SEMILLERO
  PROFESIONAL
  ALTO_RENDIMIENTO
  GOLD_NETWORK
}

enum CategoryType {
  FORMATIVA
  SELECTIVA
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LATE
  EXCUSED
  PENDING
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
  WAIVED
}

// --- NUEVOS ENUMS ---
enum ReferralStatus {
  PENDING
  CONVERTED
  REJECTED
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

model SchoolStaff {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  schoolId String
  school   School @relation(fields: [schoolId], references: [id])

  role Role

  createdAt DateTime @default(now())

  @@unique([userId, schoolId])
}

// 3. MODELOS PRINCIPALES

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String
  phone     String?
  role      Role     @default(GUARDIAN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  schoolId String?
  school   School? @relation(fields: [schoolId], references: [id])

  strategys      Strategy[] // Estrategias creadas por el entrenador
  schools        SchoolStaff[] // üëà relaci√≥n m√∫ltiple
  managedPlayers Player[]       @relation("GuardianPlayers")
  coachProfile   Coach?
  notifications  Notification[]

  // --- NUEVAS RELACIONES ---
  assignedTasks Task[] @relation("UserTasks") // Tareas asignadas al usuario (Staff)
}

model School {
  id                 String     @id @default(uuid())
  name               String
  slug               String     @unique
  logoUrl            String?
  mode               SchoolMode @default(COMMERCIAL)
  bankDetails        String?    @db.Text
  planType           PlanType   @default(SEMILLERO)
  subscriptionStatus String
  nextBillingDate    DateTime?

  users      User[]
  categories Category[]
  players    Player[]
  products   Product[]
  exercises  Exercise[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  staff SchoolStaff[] // üëà directores, coaches, etc.

  monthlyFees MonthlyFee[]

  // --- NUEVAS RELACIONES ---
  // Growth Hacking: Sistema de Referidos
  referralsSent     Referral[] @relation("SchoolReferrer")
  referralsReceived Referral[] @relation("SchoolReferee")

  // Monetizaci√≥n: Espacios de Patrocinio
  sponsorships Sponsorship[]

  // Modo Institucional: Beneficios
  benefits Benefit[]

  // Gesti√≥n Interna
  tasks Task[]

  notices Notice[]
}

model Notice {
  id      String  @id @default(uuid())
  title   String
  summary String
  content String  @db.Text
  image   String?
  status  String  @default("draft") // "draft" | "published"
  views   Int     @default(0)

  schoolId String
  school   School @relation(fields: [schoolId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id       String       @id @default(uuid())
  name     String
  type     CategoryType @default(FORMATIVA)
  schoolId String
  school   School       @relation(fields: [schoolId], references: [id])

  players         Player[]
  coaches         Coach[]           @relation("CoachCategories")
  sessions        TrainingSession[]
  matches         Match[]
  tacticalsBoards TacticalBoard[] // Relaci√≥n con Partidos
}

model SessionTacticalBoard {
  id String @id @default(uuid())

  // Relaci√≥n con la Sesi√≥n
  sessionId       String
  trainingSession TrainingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  // Relaci√≥n con la Pizarra
  boardId       String
  tacticalBoard TacticalBoard @relation(fields: [boardId], references: [id], onDelete: Cascade)

  // Metadatos de la relaci√≥n
  orderIndex Int     @default(0) // Importante para el ordenamiento en el frontend
  notes      String? // Notas opcionales para este momento espec√≠fico

  createdAt DateTime @default(now())

  @@index([sessionId])
  @@index([boardId])
}

// Modelo Principal de la Pizarra
model TacticalBoard {
  id          String  @id @default(uuid())
  title       String
  description String? @db.Text

  // Relaci√≥n con Categor√≠a
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  coachId String
  coach   Coach  @relation(fields: [coachId], references: [id])

  // Estado INICIAL de la pizarra (tokens y dibujos al empezar)
  initialState Json // Guardaremos { tokens: [], strokes: [] }

  // Animaci√≥n (Array de frames)
  animation Json? // Guardaremos [ { tokens: [], strokes: [] }, ... ]

  // Metadatos
  tags String[] // Ej: "Salida", "Corner", "Presi√≥n Alta"

  authorId  String // Qui√©n la cre√≥
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessions SessionTacticalBoard[] // Para saber en qu√© sesiones se us√≥ esta pizarra
}

model Player {
  id          String         @id @default(uuid())
  firstName   String
  lastName    String
  birthDate   DateTime
  photoUrl    String?
  medicalInfo String?        @db.Text
  active      Boolean        @default(true)
  scholarship Boolean        @default(false)
  position    PlayerPosition @default(DEF) // <--- Agregar este campo
  qrCodeToken String         @unique @default(uuid())

  schoolId   String
  school     School   @relation(fields: [schoolId], references: [id])
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  guardianId String
  guardian   User     @relation("GuardianPlayers", fields: [guardianId], references: [id])

  attendance      Attendance[]
  evaluations     Evaluation[]
  monthlyPayments MonthlyFee[]
  matchStats      MatchStat[] // Relaci√≥n con Estad√≠sticas de Partidos

  createdAt DateTime @default(now())
}

model Coach {
  id     String  @id @default(uuid())
  userId String  @unique
  user   User    @relation(fields: [userId], references: [id])
  bio    String?

  categories Category[] @relation("CoachCategories")

  // --- NUEVAS RELACIONES ---
  tacticalBoards TacticalBoard[] // Pizarras creadas por el entrenador
}

// 4. M√ìDULO DE ENTRENAMIENTO Y CONTENIDOS

model Exercise {
  id          String @id @default(uuid())
  title       String
  description String @db.Text

  // === NUEVOS CAMPOS ===
  objective  String? // Ej: "Mejorar control orientado"
  difficulty ExerciseDifficulty @default(BASIC) // BASIC, INTERMEDIATE, ADVANCED

  // Multimedia
  videoUrl String?
  imageUrl String?

  // === VISIBILIDAD Y PERMISOS ===
  isGlobal Boolean @default(false) // Si es TRUE, es un ejercicio del sistema (La Novena) para todos.

  // Relaci√≥n con Escuela (Opcional si es global)
  schoolId String?
  school   School? @relation(fields: [schoolId], references: [id])

  // Auditor√≠a: Qui√©n lo cre√≥ (Director o Entrenador)
  authorId String?
  // Si tienes un modelo User, podr√≠as descomentar esto:
  // author    User?    @relation(fields: [authorId], references: [id])

  // Etiquetas (ej: ["F√≠sico", "T√°ctico", "Sub-12"])
  tags String[]

  // Relaci√≥n con las sesiones de entrenamiento
  sessionItems SessionExercise[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TrainingSession {
  id         String         @id @default(uuid())
  title      String?
  location   String?
  status     SessionStatus? @default(SCHEDULED)
  date       DateTime
  notes      String?
  categoryId String
  category   Category       @relation(fields: [categoryId], references: [id])
  evaluations      Evaluation[]
  exercises      SessionExercise[]
  attendance     Attendance[]
  tacticalBoards SessionTacticalBoard[] // Relaci√≥n con las pizarras
  // --- NUEVAS RELACIONES ---

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model SessionExercise {
  id          String          @id @default(uuid())
  sessionId   String
  session     TrainingSession @relation(fields: [sessionId], references: [id])
  exerciseId  String
  exercise    Exercise        @relation(fields: [exerciseId], references: [id])
  orderIndex  Int
  durationMin Int?
}

model Attendance {
  id        String           @id @default(uuid())
  status    AttendanceStatus
  notes     String?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  rating    Int?
  feedback  String?
  // Relaciones
  player    Player           @relation(fields: [playerId], references: [id])
  playerId  String

  session   TrainingSession @relation(fields: [sessionId], references: [id])
  sessionId String

  // ‚ö†Ô∏è CLAVE: Esto permite buscar r√°pido y evitar duplicados
  @@unique([sessionId, playerId])
}

// --- M√ìDULO DE PARTIDOS (MATCHES) ---

model Match {
  id         String   @id @default(uuid())
  rivalName  String
  date       DateTime
  isHome     Boolean  @default(true)
  location   String?
  notes      String?
  // Relaci√≥n con categor√≠a
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  // Relaci√≥n con estad√≠sticas
  stats MatchStat[]
}

model MatchStat {
  id      String @id @default(uuid())
  goals   Int    @default(0)
  assists Int    @default(0)

  matchId String
  match   Match  @relation(fields: [matchId], references: [id])

  playerId String
  player   Player @relation(fields: [playerId], references: [id])
}

// --- FIN M√ìDULO PARTIDOS ---
// 1. Categor√≠as (Dimensiones del Radar y de clasificaci√≥n)
// 1. Enums
enum EvaluationCategory {
  TECHNICAL
  PHYSICAL
  TACTICAL
  MENTAL
  SPEED
}

enum MeasurementUnit {
  SECONDS
  METERS
  CENTIMETERS
  POINTS
  PERCENTAGE
  COUNT
}

// 2. NUEVO: Modelo de Protocolos (Tests Din√°micos)
model TestProtocol {
  id          String @id @default(uuid())
  name        String @unique// Ej: "Velocidad 30m"
  description String @db.Text

  category EvaluationCategory // ‚úÖ Clasifica el test (F√≠sico, T√©cnico, etc.)
  unit     MeasurementUnit // ‚úÖ Qu√© unidad usa este test espec√≠fico

  isGlobal   Boolean @default(true) // Creado por SuperAdmin
  baremoJson String? @db.Text // JSON de referencia

  evaluations Evaluation[]
}

// 3. Modelo de Evaluaci√≥n (Normalizado)
model Evaluation {
  id   String   @id @default(uuid())
  date DateTime @default(now())

  value Float // El resultado del jugador
  notes String? @db.Text

  // Relaci√≥n con el Test
  protocolId String
  protocol   TestProtocol @relation(fields: [protocolId], references: [id])

  // Relaci√≥n con el Jugador
  playerId String
  player   Player @relation(fields: [playerId], references: [id])

  sessionId   String?
  session     TrainingSession? @relation(fields: [sessionId], references: [id])
}

model Strategy {
  id          String   @id @default(uuid())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relaci√≥n con el creador (Entrenador)
  coachId String
  coach   User   @relation(fields: [coachId], references: [id])

  // DATOS DE LA PIZARRA
  // Guardamos las posiciones de las fichas como un JSON
  tokens Json

  // Guardamos las l√≠neas dibujadas. 
  // Opci√≥n A: Base64 String (F√°cil, pero ocupa espacio en DB).
  // Opci√≥n B: Array de coordenadas (M√°s optimizado, m√°s dif√≠cil de programar).
  // Usaremos Opci√≥n A por simplicidad ahora:
  drawingData String? @db.Text
}

// 5. M√ìDULO COMERCIAL

model MonthlyFee {
  id          String        @id @default(uuid())
  month       Int
  year        Int
  amount      Float
  status      PaymentStatus @default(PENDING)
  dueDate     DateTime
  paidAt      DateTime?
  playerId    String
  player      Player        @relation(fields: [playerId], references: [id])
  paymentDate DateTime?

  // --- NUEVA RELACI√ìN DIRECTA (OPTIMIZACI√ìN) ---
  schoolId      String
  school        School  @relation(fields: [schoolId], references: [id])
  paymentMethod String?

  receiptUrl String?
}

model Product {
  id       String  @id @default(uuid())
  name     String
  price    Float
  stock    Int
  imageUrl String?
  schoolId String
  school   School  @relation(fields: [schoolId], references: [id])
  active   Boolean @default(true)
}

// 6. SISTEMA

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  isRead    Boolean  @default(false)
  type      String
  createdAt DateTime @default(now())
}

// ==========================================
// 7. NUEVOS M√ìDULOS (ALINEACI√ìN FUNCIONAL)
// ==========================================

// --- A. GROWTH HACKING (REFERIDOS) ---
model Referral {
  id String @id @default(uuid())

  referrerSchoolId String
  referrerSchool   School @relation("SchoolReferrer", fields: [referrerSchoolId], references: [id])

  referredSchoolEmail String // Email invitado antes de que se cree la escuela
  referredSchoolId    String? // Se llena cuando la escuela se crea
  referredSchool      School? @relation("SchoolReferee", fields: [referredSchoolId], references: [id])

  status        ReferralStatus @default(PENDING)
  rewardClaimed Boolean        @default(false) // Si ya se aplic√≥ el mes gratis

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- B. MONETIZACI√ìN LOCAL (PUBLICIDAD) ---
model Sponsorship {
  id          String  @id @default(uuid())
  name        String // Ej: "Dentista San Jos√©"
  imageUrl    String // Banner publicitario
  redirectUrl String? // Link al sitio del sponsor
  location    String // Ej: "APP_BOTTOM_BANNER", "LOADING_SCREEN"

  isActive  Boolean  @default(true)
  startDate DateTime
  endDate   DateTime

  schoolId String
  school   School @relation(fields: [schoolId], references: [id])
}

// --- C. MODO INSTITUCIONAL (BENEFICIOS) ---
model Benefit {
  id          String  @id @default(uuid())
  title       String // Ej: "Gratuidad por Asistencia"
  description String  @db.Text // Ej: "Mantener 80% de asistencia mensual"
  active      Boolean @default(true)

  schoolId String
  school   School @relation(fields: [schoolId], references: [id])
}

// --- E. GESTI√ìN & OPERACIONES (KANBAN) ---
model Task {
  id          String       @id @default(uuid())
  title       String
  description String?      @db.Text
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  position    Int // <-- Nuevo campo a√±adido
  dueDate     DateTime?

  schoolId String
  school   School @relation(fields: [schoolId], references: [id])

  assignedToUserId String?
  assignedToUser   User?   @relation("UserTasks", fields: [assignedToUserId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// --- F. CONFIGURACI√ìN DE PLANES (LIMITES) ---
model PlanLimit {
  id       String   @id @default(uuid())
  planType PlanType @unique // 1 registro por tipo de plan

  maxStudents   Int // Ej: 80 para SEMILLERO
  maxCategories Int // Ej: 6
  maxCoaches    Int // Ej: 3

  allowsStore     Boolean @default(false)
  allowsGlobalLib Boolean @default(false)
  allowsFinance   Boolean @default(false)
}
